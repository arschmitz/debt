<h1>{{title}}</h1>

<p>Ticket {{ticketLink id}} was created by {{userLink user}} {{timeSince created}}.</p>
{{#if (not (equal created edited))}}
	<p>It was most recently updated {{timeSince edited}}.</p>
{{/if}}

{{{body}}}

{{#each comments}}
<div id="comment-{{id}}">
	{{userLink user}} {{timeSince created}}
	<div>{{{body}}}</div>
</div>
{{/each}}

{{#if (hasPermission "TICKET:CREATE")}}
<form method="post" action="/ticket/{{id}}/comment">
	<textarea name="body"></textarea>
	<button type="submit">Comment</button>
</form>
{{/if}}
